<div class="container-fluid category-callout">
  <h1 class="category-name text-center"><%= Category.find(@images.first.category_id).name %></h1>
  <div class="row">
      <% @images.each do |image| %>
        <div class="col-lg-4 col-md-6 col-sm-12 d-flex justify-content-center artwork-and-text">
            <% if image.image_title != "" or image.image_description != "" or image.image_year %>
              <%= image_tag(image.image.url, class: 'artwork') %>
              <div class="artwork-text d-flex justify-content-center align-items-center">
                <%= link_to image.image.url, data: {lightbox: 'artworks', title: image.image_title} do %>
                  <ul class="list-unstyled">
                    <% if image.image_title != "" %>
                      <%= content_tag(:li, image.image_title, class: 'text-center artwork-title') %>
                    <% end %>
                    <% if image.image_description != "" %>
                      <hr/><%= content_tag(:li, image.image_description, class: 'text-center artwork-description') %><hr/>
                    <% end %>
                    <% if image.image_year %>
                      <%= content_tag(:li, image.image_year, class: 'text-center artwork-year') %>
                    <% end %>
                  </ul>
                <% end %>
              </div>
            <% else %>
              <%= link_to image.image.url, data: {lightbox: 'artworks', title: image.image_title} do %>
                <%= image_tag(image.image.url, class: 'artwork') %>
              <% end %>
            <% end %>
            <%= image_tag("https://nogellos-portfolio-assets.s3.amazonaws.com/assets/ducttape-img.png", class: 'top-tape') %>
            <%= image_tag("https://nogellos-portfolio-assets.s3.amazonaws.com/assets/ducttape-img.png", class: 'bottom-tape') %>
        </div>
      <% end %>
  </div>
</div>