<!DOCTYPE html>
<html>
  <head>
    <title>NogellosPortfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower|Roboto:100,400,700" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless current_page?('/') %>
      <%= image_tag("https://nogellos-portfolio-assets.s3.amazonaws.com/assets/corner-leaves-img.png", class: "corner-leaves") %>
      <nav class="navbar navbar-expand-lg navbar-light">
        <%= link_to root_path, class: 'navbar-brand' do %>
          <i class="fa fa-pencil"></i>
          Nogellos
          <i class="fa fa-paint-brush"></i>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "Home", root_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Works", categories_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Order an artwork", "#", class: 'nav-link' %>
            </li>
          </ul>
        </div>
      </nav>
    <% end %>
    <%= yield %>
  </body>
</html>
